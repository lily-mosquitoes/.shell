# /* vim: set filetype=sh : */

alias ll="ls -alh"

function backup () {
    case "$1" in
    	daily|d)
	    echo "starting backup"
	    /bin/sh ~/Scripts/backup.sh -i ~/Scripts/.backup_sources -o ~/Backups/Daily
	    echo "done"
	;;
    	weekly|w)
	    echo "starting backup"
	    /bin/sh ~/Scripts/backup.sh -i ~/Scripts/.backup_sources -o ~/Backups/Weekly
	    echo "done"
	;;
    	monthly|m)
	    echo "starting backup"
	    /bin/sh ~/Scripts/backup.sh -i ~/Scripts/.backup_sources -o ~/Backups/Monthly-$(date +%Y-%m) -c
	    echo "done"
	;;
        unique)
	    echo "starting backup"
	    /bin/sh ~/Scripts/backup.sh -i ~/Scripts/.backup_sources -o ~/Backups/Unique-$(date +%Y-%m-%d_%H:%M) -c
	    echo "done"
	;;
	*)
	    echo "Provide a valid argument: daily | weekly | monthly | unique"
	;;
    esac
}
